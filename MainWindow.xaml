<Window x:Class="FloatingMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FloatingMusic"
        mc:Ignorable="d"
        Title="FloatingMusic" Height="720" Width="1280">
    <Grid x:Name="Page_Home" Background="{StaticResource BackgroundDark}" Visibility="Visible">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="500"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Home" Foreground="{StaticResource PrimaryText}" FontSize="16" Margin="0 10"/>
            <TextBlock Text="Search" Foreground="{StaticResource PrimaryText}" FontSize="16" Margin="0 10"/>
            <TextBlock Text="Your Library" Foreground="{StaticResource PrimaryText}" FontSize="16" Margin="0 10"/>
            <TextBlock x:Name="Label_About" Text="About" Foreground="{StaticResource PrimaryText}" FontSize="16" Margin="0 10" MouseLeftButtonDown="Label_About_MouseLeftButtonDown"/>
            <TextBlock x:Name="Label_Debug" Text="Debug" Foreground="{StaticResource PrimaryText}" FontSize="16" Margin="0 10" MouseLeftButtonDown="Label_Debug_MouseLeftButtonDown"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10">
            <TextBlock x:Name="Label_Greeting" Text="Good Morning" Foreground="{StaticResource PrimaryText}" FontSize="24" FontFamily="Microsoft Sans Serif" FontWeight="Bold"/>
        </StackPanel>
        <!-- Content Area -->
        <ScrollViewer Grid.Column="1" Grid.Row="2" Margin="0,62,0,10" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="SongList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Click="SongButton_Click"
        Padding="8"
        BorderThickness="0"
        Background="Transparent"
        HorizontalContentAlignment="Stretch">
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0"
               Source="{Binding Image}"
               Width="80"
               Height="80"
               Stretch="UniformToFill"
               Margin="0,0,12,0"
               VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1"
                    Orientation="Vertical"
                    VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Title}"
                       FontWeight="SemiBold"
                       FontSize="18"
                       Foreground="{StaticResource PrimaryText}"/>
                                    <TextBlock Text="{Binding Artist}"
                       FontSize="14"
                       Foreground="{StaticResource SecondaryText}"
                       Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Button>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <!-- Now Playing -->
        <StackPanel Grid.Column="2" Margin="25">
            <TextBlock Text="Now Playing.." Foreground="{StaticResource PrimaryText}" FontSize="24"/>
            <Image x:Name="Image_Banner" Height="243" HorizontalAlignment="Left"  Stretch="Fill" Margin="0,10,0,0"/>
            <TextBlock x:Name="Label_SongTitle" Text="Track Title" Foreground="{StaticResource PrimaryText}" FontSize="36"/>
            <TextBlock x:Name="Label_ArtistName" Text="Artist Name" Foreground="{StaticResource PrimaryText}" FontSize="18"/>
            <StackPanel Margin="0,10,0,0">
                <Grid HorizontalAlignment="Stretch" Height="85">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="0">
                        <Button x:Name="Button_Previous" Content="Previous" Width="100" Height="40" Margin="5,0"/>
                        <Button x:Name="Button_PlayPause" Content="Play" Width="100" Height="40" Margin="5,0"/>
                        <Button x:Name="Button_Next" Content="Next" Width="100" Height="40" Margin="5,0"/>
                    </StackPanel>
                    <Slider HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="400" Margin="0,11,0,0"/>
                </Grid>
            </StackPanel>
            <TextBlock x:Name="Label_ActiveLyrics" Text="Lyrics heree..." Foreground="{StaticResource PrimaryText}" FontSize="24" HorizontalAlignment="Center" Margin="0,30,0,0" TextWrapping="Wrap" TextAlignment="Center" MouseLeftButtonDown="Label_ActiveLyrics_MouseLeftButtonDown"/>
        </StackPanel>
    </Grid>
</Window>
